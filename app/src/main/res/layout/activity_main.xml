<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calculator_gray"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/txtDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="end"
        android:inputType="none"
        android:padding="16dp"
        android:textSize="32sp"
        android:text="0"
        android:focusable="false"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="5">

        <!-- Memory Row -->
        <Button android:id="@+id/btnMC"
            android:text="MC"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnMR"
            android:text="MR"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnMS"
            android:text="MS"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnMPlus"
            android:text="M+"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnMMinus"
            android:text="M-"
            style="@style/CalculatorButton" />

        <!-- Row 2 -->
        <Button android:id="@+id/btnBack"
            android:text="←"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnCE"
            android:text="CE"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnC"
            android:text="C"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnSign"
            android:text="±"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnSqrt"
            android:text="√"
            style="@style/CalculatorButton" />

        <!-- Row 3 -->
        <Button android:id="@+id/btn7"
            android:text="7"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btn8"
            android:text="8"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btn9"
            android:text="9"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnDivide"
            android:text="÷"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnPercent"
            android:text="%"
            style="@style/CalculatorButton" />

        <!-- Row 4 -->
        <Button android:id="@+id/btn4"
            android:text="4"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btn5"
            android:text="5"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btn6"
            android:text="6"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnMultiply"
            android:text="×"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnReciprocal"
            android:text="1/x"
            style="@style/CalculatorButton" />

        <!-- Row 5 and 6 -->
        <Button android:id="@+id/btn1"
            android:text="1"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btn2"
            android:text="2"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btn3"
            android:text="3"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnMinus"
            android:text="-"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnEquals"
            android:text="="
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            style="@style/CalculatorButton" />

        <!-- Row 6 -->
        <Button android:id="@+id/btn0"
            android:text="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnDecimal"
            android:text="."
            style="@style/CalculatorButton" />
        <Button android:id="@+id/btnPlus"
            android:text="+"
            style="@style/CalculatorButton" />

    </GridLayout>
</LinearLayout>